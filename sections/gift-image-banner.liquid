{% style %}
.img-banner-bg{
    {% if section.settings.bg_img != blank %}
     background-image:url('{{ section.settings.bg_img | img_url: "master" }}');
     background-size:cover;
     background-repeat:no-repeat;
     background-position:center;
     width:100%;
     height:100%;
     min-height:780px;
     position:relative;
    {% endif %}
  }
.img-banner-bg .img-banner-content-wrap{
    position:absolute;
    width:100%;
    top:36%;
    bottom:0;
}
.img-banner-bg .content-wrap{
  display:flex;
  flex-direction:column;
  justify-content:center;
  width:100%;
  height:100%;
}
.img-banner-bg .inner-heading{
    font-size:70px;
    font-weight:500;
    color:#000;
    margin:0;
    padding:0 0 10px;
}
.img-banner-bg .inner-description{
    font-size:20px;
    max-width:483px;
    color:#000;
    line-height:140%;
}
.img-banner-bg .inner-btn{
    background-color:black;
    width:100%;
    max-width:220px;
    min-height:50px;
    color:#fff;
    text-decoration:none;

}
{% endstyle %}
<div class="img-banner-bg">
 <div class="page-width img-banner-content-wrap">
  <div class="content-wrap">
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'heading' %}
     {% if block.settings.heading != blank %}
    <h2 class="inner-heading">{{ block.settings.heading }}</h2>
     {% endif %}
    {% when 'description' %}
    {% if block.settings.description != blank %}
     <div class="inner-description">
     {{ block.settings.description }}
     </div>
    {% endif %}
    {% when 'Button' %}
    {% if block.settings.btn_txt != blank %}
     <a href="{{ block.settings.btn_link }}" class="inner-btn">{{ block.settings.btn_txt }}</a>
    {% endif %}
    {% endcase %}
  {% endfor %}
  </div>
 </div>
</div>
{% schema %}
{
 "name": "Gift Image Banner",
 "class": "section-gift-image-banner",
 "settings": [
  {
    "type": "image_picker",
    "id": "bg_img",
    "label": "Background Image"
  },
  {
   "type": "text",
   "id": "bottom_bar_txt",
   "label": "Bottom Bar Text",
   "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
  }
 ],
 "blocks": [
    {
     "type": "heading",
     "name": "Heading",
     "limit": 1,
     "settings": [
        {
         "type": "text",
         "id": "heading",
         "label": "Heading",
         "default": "The Gift Guide"
        }
     ]
    },
    {
     "type": "description",
     "name": "Description",
     "limit": 1,
     "settings": [
        {
         "type": "richtext",
         "id": "description",
         "label": "Description",
        }
     ]
    },
    {
     "type": "Button",
     "name": "Button",
     "limit": 1,
     "settings": [
        {
         "type": "url",
         "id": "btn_link",
         "label": "Link"
        },
        {
        "type": "text",
        "id": "btn_txt",
        "label": "Button Text",
        "default": "SHOP NOW"
        }
     ]
    }
 ],
 "presets": [
    {
     "name": "Gift Image Banner"
    }
 ]
}
{% endschema %}