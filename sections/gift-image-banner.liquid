{% style %}
.section-gift-image-banner{
   padding-bottom:60px;
}
.img-banner-bg{
    {% if section.settings.bg_img != blank %}
     background-image:url('{{ section.settings.bg_img | img_url: "master" }}');
     background-size:cover;
     background-repeat:no-repeat;
     background-position:center;
     width:100%;
     height:100%;
     min-height:780px;
     position:relative;
    {% endif %}
  }
.section-gift-image-banner .img-banner-content-wrap{
    position:absolute;
    width:100%;
    top:45%;
    bottom:0;
}
.section-gift-image-banner .content-wrap{
  display:flex;
  flex-direction:column;
  justify-content:center;
  gap:30px;
  width:100%;
  height:100%;
}
.section-gift-image-banner .inner-heading{
    font-size:70px;
    font-weight:500;
    color:#000;
    margin:0;
    padding:0;
}
.section-gift-image-banner .inner-description{
    font-size:20px;
    max-width:483px;
    color:#000;
    line-height:140%;
}
.section-gift-image-banner .inner-btn{
    background-color:black;
    width:100%;
    max-width:220px;
    min-height:50px;
    color:#fff;
    text-decoration:none;
    display:flex;
    align-items:center;
    gap:10px;
    justify-content:center;
}
.section-gift-image-banner .bottom-bar-txt{
   background:#f5f5f5;
   text-align:center;
   color:#000;
   text-transform:uppercase;
   padding:3px;
}
@media screen and (max-width:990px){
   .mob-content-main .content-upper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 30px 0 0;
}
.section-gift-image-banner .inner-heading{
   font-size:30px;
}
.mob-content-main .banner-mobile-content {
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.mob-content-main .banner-mobile-button {
    position: absolute;
    bottom:10%;
}
.mob-content-main .banner-mobile-button .inner-btn{
   width:193px;
   min-height:45px;
}
.mob-content-main .banner-mobile-img{
   height:264px;
   object-fit:cover;
}
.mob-content-main .inner-description p{
   margin-bottom:0;
}
}
{% endstyle %}
<div class="img-banner-bg small-hide medium-hide">
 <div class="img-banner-content-wrap">
  <div class="page-width content-wrap">
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'heading' %}
     {% if block.settings.heading != blank %}
    <h2 class="inner-heading">{{ block.settings.heading }}</h2>
     {% endif %}
    {% when 'description' %}
    {% if block.settings.description != blank %}
     <div class="inner-description">
     {{ block.settings.description }}
     </div>
    {% endif %}
    {% when 'Button' %}
    {% if block.settings.btn_txt != blank %}
     <a href="{{ block.settings.btn_link }}" class="inner-btn">
      {{ block.settings.btn_txt }}
      <svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" transform="rotate(0)" stroke="#ffffff"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" stroke="#CCCCCC" stroke-width="1.584"></g><g id="SVGRepo_iconCarrier"> <path d="M16.3153 16.6681C15.9247 17.0587 15.9247 17.6918 16.3153 18.0824C16.7058 18.4729 17.339 18.4729 17.7295 18.0824L22.3951 13.4168C23.1761 12.6357 23.1761 11.3694 22.3951 10.5883L17.7266 5.9199C17.3361 5.52938 16.703 5.52938 16.3124 5.91991C15.9219 6.31043 15.9219 6.9436 16.3124 7.33412L19.9785 11.0002L2 11.0002C1.44772 11.0002 1 11.4479 1 12.0002C1 12.5524 1.44772 13.0002 2 13.0002L19.9832 13.0002L16.3153 16.6681Z" fill="#ffffff"></path> </g></svg>
   </a>
    {% endif %}
    {% endcase %}
  {% endfor %}
  </div>
  <div class="bottom-bar-txt">{{ section.settings.bottom_bar_txt }}</div>
 </div>
 
</div>
<div class="mob-content-main large-up-hide">
 <div class="content-upper">
  {% for block in section.blocks %}
   {% case block.type %}
      {% when 'heading' %}
     {% if block.settings.heading != blank %}
    <h2 class="inner-heading">{{ block.settings.heading }}</h2>
     {% endif %}
        {% when 'mobile_description' %}
    {% if block.settings.mob_desc != blank %}
     <div class="inner-description">
     {{ block.settings.mob_desc }}
     </div>
    {% endif %}
    
   {% endcase %}
  {% endfor %}
 </div>
 {% if section.settings.mob_img != blank %}
  <div class="banner-mobile-content">
  <img src="{{ section.settings.mob_img | img_url: 'master' }}" width="100%" height="100%" class="banner-mobile-img">
  {% if section.settings.mob_btn_txt != blank %}
   <div class="banner-mobile-button">
    <a href="{{ section.settings.mob_btn_link }}" class="inner-btn"> 
      {{ section.settings.mob_btn_txt }}
      <svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" transform="rotate(0)" stroke="#ffffff"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" stroke="#CCCCCC" stroke-width="1.584"></g><g id="SVGRepo_iconCarrier"> <path d="M16.3153 16.6681C15.9247 17.0587 15.9247 17.6918 16.3153 18.0824C16.7058 18.4729 17.339 18.4729 17.7295 18.0824L22.3951 13.4168C23.1761 12.6357 23.1761 11.3694 22.3951 10.5883L17.7266 5.9199C17.3361 5.52938 16.703 5.52938 16.3124 5.91991C15.9219 6.31043 15.9219 6.9436 16.3124 7.33412L19.9785 11.0002L2 11.0002C1.44772 11.0002 1 11.4479 1 12.0002C1 12.5524 1.44772 13.0002 2 13.0002L19.9832 13.0002L16.3153 16.6681Z" fill="#ffffff"></path> </g></svg>
   </a>
   </div>
  {% endif %}
  </div>
 {% endif %}
 <div class="bottom-bar-txt">{{ section.settings.bottom_bar_mob_txt }}</div>
</div>
{% schema %}
{
 "name": "Gift Image Banner",
 "class": "section-gift-image-banner",
 "settings": [
  {
    "type": "image_picker",
    "id": "bg_img",
    "label": "Background Image"
  },
  {
   "type": "image_picker",
   "id": "mob_img",
   "label": "Mobile Banner Image"
  },
  {
   "type": "text",
   "id": "mob_btn_txt",
   "label": "Mobile Button Text"
  },
  {
   "type": "url",
   "id": "mob_btn_link",
   "label": "Button link"
  },
  {
   "type": "text",
   "id": "bottom_bar_txt",
   "label": "Desktop Bottom Bar Text",
   "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
  },
  {
   "type": "text",
   "id": "bottom_bar_mob_txt",
   "label": "Mobile Bottom Bar Text"
  }
 ],
 "blocks": [
    {
     "type": "heading",
     "name": "Heading",
     "limit": 1,
     "settings": [
        {
         "type": "text",
         "id": "heading",
         "label": "Heading",
         "default": "The Gift Guide"
        }
     ]
    },
    {
     "type": "description",
     "name": "Description",
     "limit": 1,
     "settings": [
        {
         "type": "richtext",
         "id": "description",
         "label": "Description",
        }
     ]
    },
    {
      "type": "mobile_description",
      "name": "Mobile Description",
      "limit": 1,
      "settings": [
         {
         "type": "richtext",
         "id": "mob_desc",
         "label": "Mobile Description"
         }
      ]
    },
    {
     "type": "Button",
     "name": "Button",
     "limit": 1,
     "settings": [
        {
         "type": "url",
         "id": "btn_link",
         "label": "Link"
        },
        {
        "type": "text",
        "id": "btn_txt",
        "label": "Button Text",
        "default": "SHOP NOW"
        }
     ]
    }
 ],
 "presets": [
    {
     "name": "Gift Image Banner"
    }
 ]
}
{% endschema %}